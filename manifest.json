{
  "manifest_version": 3,
  "name": "Hello World React Chrome Extension",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "*://*/*"  // 或者指定某个具体的网址
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],  // 或者指定特定页面，比如 "https://example.com/*"
      "js": ["contentScript.js"]
    }
  ]
}
